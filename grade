#!/usr/bin/env bash

# This script is used for backwards compatibility with the old `grade` python
# script, which now has been moved to the `autograder` package in the `src`
# directory as `grade.py`.

if ! command -v uv >/dev/null 2>&1; then
  echo "uv: command not found"
  exit 1
fi

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
uv pip install --quiet --editable "$SCRIPT_DIR"
uv run --project "$SCRIPT_DIR" grade "$@"
